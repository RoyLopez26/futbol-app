rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to tournaments and their subcollections
    match /tournaments/{tournamentId} {
      allow read, write: if true;
      
      match /matches/{matchId} {
        allow read, write: if true;
      }
      
      match /teams/{teamId} {
        allow read, write: if true;
      }
    }
  }
}